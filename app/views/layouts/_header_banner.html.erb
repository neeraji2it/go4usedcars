<ol class="breadcrumb">
  <% if params[:loc] == "gurgaon" %>
    <li class="active">GGN Show Room <span class="opening-text">Opening Hours:</span>10am to 6pm(Tuesdays Off)</li>
    <li class="bredcrumb-text">24Hr.Helpline: <span class="skype-color"><i class="fa fa-skype"></i>+91-981186-2121    </span>  </li>                  
  <% elsif params[:loc] == "bangalore" %>
    <li class="active">Blr Show Room <span class="opening-text">Opening Hours:</span>10am to 6pm(Sundays Off)</li>
    <li class="bredcrumb-text">24Hr.Helpline: <span class="skype-color"><i class="fa fa-skype"></i>+91-99100-40022    </span>  </li>                  

  <%end%>
</ol>

<div class="container-fluid">

  <div class="row">

    <div class="col-xs-4 col-sm-4 box-prestige"><a href="/homes"><img src="/assets/image.png" height="160" width="266" class="img-responsive logo-responsive1" ></a></div>

    <div class="col-xs-4 col-sm-4 box-logo">
      <% if params[:loc] == "gurgaon" %>
        <a href="/homes/home?loc=gurgaon"><img src="/assets/logo.png"height="120" width="120" class="img-responsive logo-responsive2"  ></a>
      <% elsif params[:loc] == "bangalore" %>
        <a href="/homes/home?loc=bangalore"><img src="/assets/logo.png"height="120" width="120" class="img-responsive logo-responsive2"  ></a>
      <% end %>
    </div>





    <div class="col-xs-4 col-sm-4 box-social-icon">

      <ul class="nav-pills top-menu ul-design" >
        <% if params[:loc] == "gurgaon" %>
          <li class="menu-padding"><a href="/homes/faq?loc=gurgaon">FAQ</a> </li><li class="menu-padding">  |</li>

          <li class="menu-padding"><a href="/homes/testimonial?loc=gurgaon">Testimonial</a></li> <li class="menu-padding">|</li>

          <li class="menu-padding"><a href="/homes/careers?loc=gurgaon">Join Us</a> </li> <li class="menu-padding">|</li>

          <li class="menu-padding"><a href="/homes/contact_us?loc=gurgaon">Contact Us</a> </li>
        <% elsif params[:loc] == "bangalore" %>
          <li class="menu-padding"><a href="/homes/faq?loc=bangalore">FAQ</a> </li><li class="menu-padding">  |</li>

          <li class="menu-padding"><a href="/homes/testimonial?loc=bangalore">Testimonial</a></li> <li class="menu-padding">|</li>

          <li class="menu-padding"><a href="/homes/careers?loc=bangalore">Join Us</a> </li> <li class="menu-padding">|</li>

          <li class="menu-padding"><a href="/homes/contact_us?loc=bangalore">Contact Us</a> </li>
        <% end %>
      </ul>

      <table cellpadding="5" cellspacing="5" class="social-top">
        <%= render :partial => "layouts/social_links" %>
      </table>

    </div>

    <div class="col-xs-4 ol-sm-4 search-responsive">   
      <table cellpadding="5" cellspacing="5">
        <th>
        <%= form_tag(buy_car_homes_path(:loc => params[:loc]), :method => "GET", :class => "navbar-form navbar-left") do %>
          <%= hidden_field_tag :loc, nil, :value => params[:loc]  %>
          
        <div class="row">
          <div class="form-group">
            <%= text_field_tag :search, nil, :class => "form-control", :placeholder => "Search" %>
          </div>
        
          <button type="submit" class="btn btn-default ">
            <div class="font-size">
              <i class="fa fa-search "></i>
            </div>
          </button>
        </div>
        <% end %>
        </th>
      </table>
    </div>

  </div>

</div>