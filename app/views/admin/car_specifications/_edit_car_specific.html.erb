<%= form_for @vehicle, :url => "/admin/car_specifications/#{params[:id]}/update_car_specific", :method => "PUT", :remote => true do |f| %>
  <% if @feature_car_specifications.present? && @entertainment_car_specifications.present? && @safety_car_specifications.present? %> 
    <div class="row">
      <div class="col-sm-12">
        <b>Car Specification</b>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="table-responsive">
          <table class="table table-bordered">
            <% if @technical_car_specifications.present? %>
              <tr>
                <th colspan="3">Technical</th>
              </tr>
              <% @technical_car_specifications.each do |car_specif| %>
                <tr>
                  <th>
                    <% if car_specif.name.present? %>
                      <%= check_box_tag "technical_car_ids[]", car_specif.id, true %>
                    <% else %>
                      <%= check_box_tag "technical_car_ids[]", car_specif.id %>
                    <% end %>
                  </th>
                  <th><%= car_specif.specification.name %></th>
                  <th><%= text_field_tag "name_#{car_specif.id}", car_specif.name %></th>
                </tr>
              <% end %>
            <% end %>

            <% if @feature_car_specifications.present? %>
              <tr>
                <th colspan="4">Features</th>
              </tr>
              <% @feature_car_specifications.each do |car_specif| %>
                <tr>
                  <th>
                    <% if car_specif.name.present? %>
                      <%= check_box_tag "feature_car_ids[]", car_specif.id, true %>
                    <% else %>
                      <%= check_box_tag "feature_car_ids[]", car_specif.id %>
                    <% end %>
                  </th>
                  <th><%= car_specif.specification.name %></th>
                  <th><%= text_field_tag "name_#{car_specif.id}", car_specif.name %></th>
                </tr>
              <% end %>
            <% end %>

            <% if @entertainment_car_specifications.present? %>
              <tr>
                <th colspan="4">Entertainment</th>
              </tr>
              <% @entertainment_car_specifications.each do |car_specif| %>
                <tr>
                  <th>
                    <% if car_specif.name.present? %>
                      <%= check_box_tag "entertainment_car_ids[]", car_specif.id, true %>
                    <% else %>
                      <%= check_box_tag "entertainment_car_ids[]", car_specif.id %>
                    <% end %>
                  </th>
                  <th><%= car_specif.specification.name %></th>
                  <th><%= text_field_tag "name_#{car_specif.id}", car_specif.name %></th>
                </tr>
              <% end %>
            <% end %>

            <% if @safety_car_specifications.present? %>
              <tr>
                <th colspan="4">Safety</th>
              </tr>
              <% @safety_car_specifications.each do |car_specif| %>
                <tr>
                  <th>
                    <% if car_specif.name.present? %>
                      <%= check_box_tag "safety_car_ids[]", car_specif.id, true %>
                    <% else %>
                      <%= check_box_tag "safety_car_ids[]", car_specif.id %>
                    <% end %>
                  </th>
                  <th><%= car_specif.specification.name %></th>
                  <th><%= text_field_tag "name_#{car_specif.id}", car_specif.name %></th>
                </tr>
              <% end %>
            <% end %>
          </table>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= f.submit "Save", :class => "btn btn-sm btn-warning" %>
      </div>
    </div>
  <% else %>
    No Car Specification created.
  <% end %>
<% end %>