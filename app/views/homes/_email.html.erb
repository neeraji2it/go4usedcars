<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Send Car Details</h4>
    </div>
    <div class="modal-body">
        <div id="final_deal">
            <%= form_tag send_details_path(), :method => :get, remote: true do %>
              <%= hidden_field_tag :car_id %>
              <%= hidden_field_tag :loc, params[:loc] %>
              <div class="frow">
                  <div>Email:</div>
                  <div><%= email_field_tag :email %></div>
              </div>
              <div class="frow">
                  <div></div>
                  <div><%= submit_tag "Send", :class => "btn btn-primary btn-sm" %></div>
              </div>
            <% end %>
        </div>
    </div>
</div>