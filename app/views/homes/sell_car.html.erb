<% @page_title = "Sell Cars - Go4 Used Cars" %>
<div class="box-main-contant">
  <h1><span class="about-us">Sell Cars</span></h1>
  <div class="border-row"></div>
  <div class="row">
    <div class="col-xs-6 col-sm-2 left-paddings">
      <p><center><h5><b>Sell your car</b><br />Go4usedcars.com<br />
        </h5>
        <br />
      </center></p>
      <div class="border-row"></div>
    </div>

    <div class="col-xs-6 col-sm-3 right-column-spacing">

      <div class="col-sm-3 box-sell-cars" style="border: 1px solid #ccc;">
        <%=form_for @sell_car, :url=>"/homes/save_sell_car?loc=#{params[:loc]}",:method => "POST" do |f|%>
          <h1 class="font-size-sellcar" style=" background-color:#fc6; text-indent:20px; ">ABOUT YOUR CAR</h1>
          <% if @sell_car.errors.any? %>
            <div id="error_explanation">
              <ul style="float: left;">
                <% @sell_car.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <p class="text-grey">Select Make:</p> 
                     <div class="inner-addon left-addon">
                      <i class="fa fa-car"></i> 
                      <%= f.select :manufacturer_id, options_for_select(Manufacturer.all.map {|manufacturer| [manufacturer.name, manufacturer.id] }), {}, :id => "txtcar", :class => "form-control", :style => "padding: 6px 28px;", :onchange => "load_all_model(this)" %>
                       <br />
                     </div>
           
                    <div id="load_carmodels">
                      
                    </div>
          
                    <br/>
                    
                    <div id="load_varients">
                      
                    </div>
          
                    <br />


          <%= f.file_field :image, :id=>"usercarimage" %>
          <br />

          <label>Make Year</label>
          <div class="inner-addon  left-addon">
            <i class="fa fa-calendar"></i>	
            <%=f.text_field :manufacture_year,:placeholder=>"MakeYear", :class=>"form-control datepicker", :id=>"makemonth" %>
          </div> 
          <br />

          <div class="inner-addon  left-addon">
            <i class="fa fa-user"></i>
            <%= f.select :owner_type, options_for_select([["Select Owner",""],["I bought it New","I bought it New"],["I am the Second owner","I am the Second owner"],["I am the Third owner","I am the Third owner"],["I am the Fourth owner","I am the Fourth owner"],["Four or more previous owners","Four or more previous owners"]]), {}, :class=>"form-control",:id=>"drpOwner", :style => "padding: 6px 28px;"%>
            <span id="msgOwner" class="error"></span>
            <br/>
          </div>
          <div class="inner-addon left-addon">
            <i class=" fa fa-cab"></i>	
            <%=f.text_field :kms_done,:placeholder=>"Kms Done", :class=>"form-control",:id=>"txtKms"%>
            <br>
          </div>
          <div class="inner-addon left-addon">
            <i class="fa fa-building"></i>	
            <%=f.select :city, options_for_select([["Select Location", ""],["Bangalore","bangalore"],["Delhi","gurgaon"]],:selected => f.object.city), {},:id=>"txtcity", :class => "form-control", :rows => "1",:style => "padding: 6px 28px;" %><br>
          </div>
          <div class="inner-addon left-addon">
            <i class="fa fa-certificate"></i>	
            <%=f.text_field :color, :placeholder=>"Color",:class=>"form-control",:id=>"txtColor"%><br>
          </div>
          <div class="inner-addon left-addon ">
            <i class="fa fa-circle-o"></i>	
            <%=f.select :transmission, options_for_select([["-- Select Transmission --",""],
                ["Manual","Manual"],["Automatic","Automatic"]]), {}, :class=>"form-control", 
              :id=>"selecttransmission", :style => "padding: 6px 28px;" %>
            <br>
          </div>
          <div class="inner-addon left-addon">
            <i class="fa fa-pencil  "></i>	
            <%=f.text_field :registration_no,:placeholder=>"Registration No.",:class=>"form-control",:id=>"txtRegNo"%>
            <br />
          </div>

          <div class="inner-addon left-addon">
            <label style="padding-right:20px;">Ownership*</label>
            <label class="radio-inline">
              <%=f.radio_button :ownership, "Individual"%> Individual
            </label>
            <label class="radio-inline">
              <%=f.radio_button :ownership, "Corporate",:id=>"btnTaxc"%> Corporate
            </label>
          </div>
          <br />
          <div class="inner-addon left-addon">
            <label style="padding-right:20px;">Car Insurance*</label>
            
              <%=f.radio_button :car_insurence, "Comprehensive",:id=>"rdoComprehensive"%> Comprehensive
              
                <%=f.radio_button :car_insurence, "Third-Party",:id=>"rdoThirdParty"%> Third-Party  
              
                <%=f.radio_button :car_insurence, "No Insurance",:id=>"rdoNoInsurance"%> No Insurance       
          </div>
          <br />
          <div class="inner-addon left-addon">
            <label style="padding-right:20px;">When you want to sell*</label>
            
              <%=f.radio_button :when_to_sell, "At the Earliest",:id=>"rdoComprehensive"%> At the Earliest 
           
           
              <%=f.radio_button :when_to_sell, "With in this month",:id=>"rdoThirdParty"%>  With in this month
            
              <%=f.radio_button :when_to_sell, "Just Evaluating",:id=>"rdoNoInsurance"%>  Just Evaluating
            
          </div> <br />
          <label>Insurance Valid Till</label>
          <div class="inner-addon left-addon">
            <i class="fa fa-calendar"></i>
            <%=f.text_field :insurence_valid_till,:placeholder=>"Insurance Valid Till",
              :class=>"form-control datepicker", :id => "InsValidTillMonth"%>
            <br />
          </div>    
          <div class="inner-addon left-addon">
            <i class="fa fa-rupee "></i>	
            <%=f.text_field :expected_price,:placeholder=>"Expected Price",:id=>"txtPrice",:class=>"form-control"%>
            <br />
          </div>
          <div class="inner-addon left-addon">
            <i class="fa fa-comment "></i>	
            <%=f.text_field :comments,:placeholder=>"Your Comments",:class=>"form-control"%>
            <br />
          </div>
          <p class="text-grey">Your comments are optional. Use this space to tell buyers in brief why do you wish to sell this car & what is so special about this car.</p>
          <h1 class="font-size-sellcar" style=" background-color:#fc6; text-indent:20px; ">ABOUT YOU
          </h1>
          <div class="inner-addon left-addon">
            <i class="fa fa-user "></i>	
            <%=f.text_field :seller_name,:placeholder=>"Your Name*",:id=>"txtName",:class=>"form-control"%>
            <br />
          </div>
          <div class="inner-addon left-addon">
            <i class="fa fa-envelope "></i>	
            <%=f.email_field :seller_email,:placeholder=>"Email*",:id=>"txtEmail",:class=>"form-control"%>
            <br />
          </div>
          <div class="inner-addon left-addon">
            <i class="fa fa-phone"></i>	
            <%=f.telephone_field :seller_phone,:placeholder=>"Phone*",:id=>"txtphone",:class=>"form-control"%>
            <br />
          </div>
          <div class="inner-addon left-addon">
            <i class="fa fa-home "></i>	
            <%=f.text_field :seller_organization,:placeholder=>"Name of Your Oraganization*",:id=>"txtOrg",:class=>"form-control"%><br />
          </div>
          <%= f.submit :class=>"btn btn-warning",:style=>"float:right;"%></br>


        </div>
        </p>
      <%end%>
    </div> <br />
  </div>
</div>    




<script>
  $(function() {
    $(".datepicker").datepicker({
      dateFormat: 'dd-mm-yy',
      todayHighlight: true,
      todayBtn: 'linked',
      autoclose: true
    });
  });
  
  $(document).ready(function() {
    $('#txtphone').mask('(000) 000-0000');
  });


</script>

<script>
  function load_all_model(obj) {
    var manufacturer_id = obj.value;
    
    $.ajax({
      url: "/homes/load_model",
      dataType: "Script",
      type: "GET",
      data: {
        manufacturer_id: manufacturer_id,
        sell: true
      }
    });
  }
</script>