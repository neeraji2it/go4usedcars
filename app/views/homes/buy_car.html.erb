<% @page_title = "Buy Car - Go4 Used Cars" %>

<h1><span class="about-us text-testimonials">Buy Cars</span></h1>

<div class="border-row"></div>
<div class="row">
  <div class="col-xs-6 col-sm-2 left-paddings buycar-paddings "> 
    <%= render :partial => "car_search_menu" %>
  </div>

  <div class="col-xs-6 col-sm-3 buycar-width">
    <div id="search_result">
      <%= render :partial => "buy_car" %>
    </div>
  </div>
</div>

<script>
  $(document).on("change", "#select_manuf", function() {
    var manufacturer_id = $(this).val();
    var location = $(this).data("loc");
    $.ajax({
      url: "/homes/load_model",
      dataType: "Script",
      type: "GET",
      data: {
        manufacturer_id: manufacturer_id,
        loc: location
      }
    });
  });
</script>