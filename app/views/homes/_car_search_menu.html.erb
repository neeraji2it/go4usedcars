<p>
<center>
  <h5>
    <b>USED CARS SEARCH</b>
  </h5>           
  <table  cellpadding="0" cellspacing="0" bgcolor="#FFFFFF" class="table-cars-search">
    <%= form_tag @search, :url => "/", :method => "GET" do %>
      <tr>
        <td style="height:10px;" > </td> 
      </tr>
      <tr>
        <td class="borderforleft"> 
          <%= select_tag "category", options_for_select([["- Manufacturer -", ""]]), :id => "selectcategory", :style => "width:200px;", :class => "selectstyle" %>
        </td>
      </tr>
      <tr>
        <td class="borderforleft"> 
          <%= select_tag "car_model", options_for_select([["- Car Model -", ""]]), :id => "selectcategory", :style => "width:200px;", :class => "selectstyle" %>
        </td>
      </tr>
      <tr>
        <td class="borderforleft"> 
          <%= select_tag "price", options_for_select([["- Price Range -", ""], ["Up to 1 lakh", "0"], ["1-3 lakhs", "1"],["3-5 lakhs", "2"],["5-8 lakhs", "3"],["8-13 lakhs", "4"],["13-20 lakhs", "5"], ["20 lakhs or above", "6"] ]), :id => "selectcategory", :style => "width:200px;", :class => "selectstyle" %>
        </td>
      </tr>
      <tr>
        <td class="borderforleft"> 
          <%= select_tag "price", options_for_select([["- Mileage -", ""], ["upto 5,000 KM", "0"], ["upto 10,000 KM", "1"],["upto 15,000 KM", "2"],["upto 20,000 KM", "3"],["upto 25,000 KM", "4"],["upto 30,000 KM", "5"], ["upto 35,000 KM", "6"], ["upto 40,000 KM", "7"], ["upto 45,000 KM", "8"], ["upto 50,000 KM", "9"], ["upto 55,000 KM", "10"], ["upto 60,000 KM", "11"], ["upto 65,000 KM", "12"], ["upto 70,000 KM", "13"], ["upto 75,000 KM", "14"], ["upto 80,000 KM", "15"], ["upto 85,000 KM", "16"], ["upto 90,000 KM", "17"], ["upto 95,000 KM", "18"], ["upto 1,00,000 KM", "19"], ["upto 1,50,000 KM", "20"] ]), :id => "selectcategory", :style => "width:200px;", :class => "selectstyle" %>
        </td>
      </tr>
      <tr>
        <td class="borderforleft"> 
          <%= select_tag "registration_year", options_for_select([["- Registration Year -", ""]] + YEAR.map {|x| [x, x]}), :id => "selectcategory", :style => "width:200px;", :class => "selectstyle" %>
        </td>
      </tr>

      <tr><td style="height:5px;" class="borderforleft"> </td> </tr>
      <tr>
        <td class="borderforleft" style="text-align:center">
          <input type="submit" id="searchsubmit2" name="searchsubmit2"  value="Search" />
        </td>
      </tr>
    <% end %>
  </table>       
</center>
</p>

